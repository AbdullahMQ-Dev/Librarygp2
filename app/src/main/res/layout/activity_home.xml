<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity">

    <Button
        android:id="@+id/allbookd_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/background_1"
        android:drawableTop="@drawable/ic_action_listbook"
        android:paddingTop="20dp"
        android:text="All Books"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cat_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/backgroung_2"
        android:drawableTop="@drawable/category"
        android:paddingTop="20dp"
        android:text="Category"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/allbookd_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/setting_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="246dp"
        android:background="@drawable/backgroun_3"
        android:drawableTop="@drawable/setting"
        android:paddingTop="20dp"
        android:text="Setting"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/allbookd_btn" />


    <Button
        android:id="@+id/uploadbook_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bacground_4"
        android:drawableTop="@drawable/upload"
        android:paddingTop="20dp"
        android:text="Upload"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/setting_btn"
        app:layout_constraintTop_toBottomOf="@+id/cat_btn" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="176dp"
        android:background="@drawable/bacground_5"
        android:drawableTop="@drawable/lock"
        android:paddingTop="20dp"
        android:text="Log out"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bot_btn"
        app:layout_constraintTop_toBottomOf="@+id/uploadbook_btn" />

    <Button
        android:id="@+id/bot_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="172dp"
        android:background="@color/colorAccent"
        android:drawableTop="@drawable/bot"
        android:onClick="Bot"
        android:paddingTop="20dp"
        android:text="Bot"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/logout_btn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_btn"
        app:layout_constraintVertical_bias="0.062" />
</androidx.constraintlayout.widget.ConstraintLayout>